{
    "type": "loraone_productkit",
    "Template": {
        "name": "{{name}}",
        "title": "Track-and-Trace",
        "description": "LoRaWAN based Track-and-Trace product kit",
        "type": "loraone",
        "activityEnabled": false,
        "assets": [
           
            {
                "name": "3",
                "title": "acceleration",
                "description": "Reports if the device is currently moving or not",
                "is": "sensor",
                "profile": {
                    "type": "boolean"
                },
                "control": {
                    "name": "onoff"
                },
                "state": {"value": false}
            },
			
            {
                "name": "9",
                "title": "GPS",
                "description": "GPS coordinates",
                "style": "Primary",
                "is": "sensor",
                "profile": {
                    "type": "object",
					"properties": {
						"altitude": { "type": "number" },
						"latitude": { "type": "number" },
						"longitude": { "type": "number" }
					}
                },
                "control": {
                    "name": "map"
                }
            },

            {
                "name": "14",
                "title": "battery",
                "description": "current battery level",
                "is": "sensor",
                "profile": {
                    "type": "integer",
                    "unit": "%",
					"minimum": 0,
                    "maximum": 100
                },
                "control": {
                    "name": "circle-progress"
                }
            },
			
			{
                "name": "5",
                "title": "temperature",
                "description": "current board temperature",
                "is": "sensor",
                "profile": {
                    "type": "number",
                    "unit": "°",
					"minimum": -40,
                    "maximum": 85
                },
                "control": {
                    "name": "circle-progress"
                }
            },
			
			{
                "name": "15",
                "title": "speed",
                "description": "current average speed of the device",
                "is": "sensor",
                "profile": {
                    "type": "integer",
					"minimum": 0,
                    "unit": "km/h"
                },
                "control": {
                    "name": "circle-progress"
                }
            }
        ]
    }
}