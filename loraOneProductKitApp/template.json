{
    "type": "loraone_productkit",
    "Template": {
        "name": "{{name}}",
        "title": "LoraOne product kit",
        "description": "lora",
        "type": "loraone",
        "activityEnabled": true,
        "assets": [
           
		    {
                "name": "1",
                "title": "parking-space sensor",
                "description": "True when a car is parked, otherwise false",
                "is": "sensor",
                "profile": {
                    "type": "boolean"
                },
                "control": {
                    "name": "onoff"
                },
                "state": {"value": false}
            },
			{
                "name": "2",
                "title": "gate position",
                "description": "True when the gate is open, otherwise false",
                "is": "sensor",
                "profile": {
                    "type": "boolean"
                },
                "control": {
                    "name": "onoff"
                },
                "state": {"value": false}
            },
            {
                "name": "3",
                "title": "movement",
                "description": "Reports if the device is currently moving or not",
                "is": "sensor",
                "profile": {
                    "type": "boolean"
                },
                "control": {
                    "name": "onoff"
                },
                "state": {"value": false}
            },
			
            {
                "name": "9",
                "title": "GPS",
                "description": "GPS coordinates",
                "style": "Primary",
                "is": "sensor",
                "profile": {
                    "type": "object",
					"properties": {
						"altitude": { "type": "number" },
						"latitude": { "type": "number" },
						"longitude": { "type": "number" }
					}
                },
                "control": {
                    "name": "map"
                }
            },

            {
                "name": "14",
                "title": "battery",
                "description": "current battery level",
                "is": "sensor",
                "profile": {
                    "type": "integer",
                    "unit": "%",
					"minimum": 0,
                    "maximum": 100
                },
                "control": {
                    "name": "circle-progress"
                }
            },
			
			{
                "name": "lock",
                "title": "lock",
                "description": "used to lock my stuff.",
                "is": "virtual",
                "profile": {
                    "type": "boolean"
                },
                "control": {
                    "name": "lock"
                }
            }
        ]
    }
}
